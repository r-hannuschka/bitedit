<?xml version="1.0" encoding="ISO-8859-1"?>
<container type="frame" css="xml_frame" title="SplitPanel XML Template" >

    <attribute>
        <dimension width="500" height="500" />        
        <position left="500" top="200" />      
        <background color="#ffffff" />
    </attribute>
    
    <contains>
        <container type="splitpanel">
            <attribute>
                <background color="#3d3d3d" />
            </attribute>
            <contains>
                <container type="panel" direction="left" >
                    <attribute>
                        <background color="#2a2a2a" />  
                    </attribute>
                </container>
                <container type="panel" direction="right">
                    <attribute>
                        <background color="#a3a3a3" />
                        <layout type="GridLayout" rows="1" cols="2" />
                    </attribute>
                    <contains>
                        <container type="panel">
                            <attribute>
                                <background color="#8d8d8d" />
                            </attribute>
                        </container>
                        <container type="panel">
                            <attribute>
                                <background color="#00ffff" />
                                <layout type="BorderLayout" hgap="1" vgap="1" />
                            </attribute>
                            <contains>
                                <container type="Panel" direction="north">
                                    <attribute>
                                        <background color="#000" />
                                        <dimension width="200" height="100" />
                                    </attribute>
                                </container>                                
                                <container type="Panel" direction="center">                                    
                                    <attribute>
                                        <background color="#000" />
                                        <dimension width="200" height="100" />
                                    </attribute>
                                </container>                                
                                <container type="Panel" direction="east">                                    
                                    <attribute>
                                        <background color="#000" />
                                        <dimension width="100" height="100" />
                                    </attribute>
                                </container>                                
                                <container type="Panel" direction="south">                                    
                                    <attribute>
                                        <background color="#000" />
                                        <dimension width="200" height="50" />
                                    </attribute>
                                </container>
                            </contains>
                        </container>
                    </contains>
                </container>
            </contains>
        </container>
    </contains>
</container>